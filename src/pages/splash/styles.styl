.splash
  display flex
  flex-direction column
  justify-content flex-end
  align-items center
  height 100vh
  color #fff
  background #fff url('//img3.doubanio.com/view/activity_page/raw/public/p3534.jpg') no-repeat center
  background-size cover

  .content
    padding-bottom 30px
    font-size 20px
    font-weight 600

    .button
      display block
      padding 8px 80px
      color inherit
      font-size 14px
      text-align center
      background #00B51D
      border-radius 20px
      text-decoration none
