.comment
  padding 15px 0

  .header
    display flex
    align-items flex-start

  .avatar
    display block
    margin-right 10px
    width 42px
    height 42px
    border-radius 50%
    overflow hidden

    img
      width 100%
      height 100%
      object-fit cover

  .name
    color #494949
    font-size 14px
    font-weight 600

  .meta
    color #aaa
    font-size 12px

    &>span:first-child
      margin-right 10px

  .summary
    margin-top 15px
    color #494949