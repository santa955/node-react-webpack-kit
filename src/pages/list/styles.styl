.movie
  margin-top 10px

  &:first-child
    margin-top 0

.movie-inner
  display flex
  align-items flex-start
  padding 15px 18px
  width 100%
  background #fff
  text-decoration none

  .cover
    width 80px
    height auto
    object-fit cover
    border-radius 4px

  .info
    margin-left 15px
    color #aaa
    font-size 12px
    flex 1
    line-height 1.5

  .title
    color #494949
    font-size 17px
    line-height 1.3
    font-weight 50

  .meta
    margin-top 5px
    overflow hidden
    text-overflow ellipsis
    max-width 250px
    white-space nowrap

    b
      font-weight 400

  .meta-star
    display flex
    justify-content flex-start
    align-items center

    span:first-child
      margin-right 10px

    .meta-rate
      font-size 12px

  .meta-tags
    &> span
      margin-right 8px