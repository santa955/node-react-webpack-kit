.wrapper
  display flex
  flex-direction column
  min-height 100vh
  background #fff
  font-family 'Hiragino Sans GB', 'Microsoft YaHei', 'WenQuanYi Micro Hei', sans-serif

.header
  display flex
  justify-content space-between
  align-items center
  margin 0 auto
  padding 20px 0
  width 100%
  max-width 960px

  h1
    a
      display block
      width 60px
      height 60px
      border-radius 50%
      overflow hidden
      transition transform .8s ease-in

      &:hover
        transform rotate(-360deg)

    img
      width 100%
      height 100%
      object-fit cover

  .header-nav
    display flex
    justify-content flex-end
    align-items center

    .nav
      display inline-block
      margin-left 30px
      color #404040
      font-size 18px
      text-decoration none

      &:first-child
        margin-left 0

.main
  margin 60px auto 0
  width 100%
  color #404042
  font-size 16px
  flex 1 0 auto
  max-width 960px
  line-height 2

  em
    font-weight 600
    text-decoration underline

  .main-greet
    font-size 32px
    font-weight 600

  .main-head
    font-size 32px
    font-weight 600

  .main-worked
    padding 80px 0

  .worked-company
    display flex
    justify-content flex-start
    align-items center
    margin-top 20px

    em
      margin-right 40px
      filter grayscale(1)

.footer
  display flex
  justify-content center
  align-items center
  padding 5px
  color #404042
  font-size 14px
  flex-wrap wrap
  min-height 100px
  background rgba(102, 51, 153, .02)
  flex-shrink 0
  border-top 1px solid #ddd

  div
    margin-right 60px

  b
    font-size 16px
    font-weight 600

  p
    margin-top 10px
    font-size 14px
    line-height 1.45

  a
    color inherit
    text-decoration none

    &:hover
      color #05f