.header
  display flex
  justify-content space-between
  align-items center
  margin 0 auto
  padding 20px 0
  width 100%
  max-width 960px

  h1
    a
      display block
      width 60px
      height 60px
      border-radius 50%
      overflow hidden
      transition transform .8s ease-in

      &:hover
        transform rotate(-360deg)

    img
      width 100%
      height 100%
      object-fit cover

  .header-nav
    display flex
    justify-content flex-end
    align-items center

    .nav
      display inline-block
      margin-left 30px
      color #404040
      font-size 18px
      text-decoration none

      &:first-child
        margin-left 0