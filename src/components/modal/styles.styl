.modal-mask
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  height 100%
  z-index 1000
  background-color rgba(0, 0, 0, .65)

.modal-wrapper
  position fixed
  top 50%
  left 50%
  width auto
  transform translate(-50%, -50%)
  z-index 1001
  overflow auto
  outline 0
  background #fff

  @media screen and (max-width: 767px)
    margin 8px auto
    max-width calc(84%)