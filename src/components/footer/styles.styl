.footer
  display flex
  justify-content center
  align-items center
  padding 5px
  font-size 14px
  flex-wrap wrap
  min-height 100px
  background rgba(102, 51, 153, .02)
  flex-shrink 0
  border-top 1px solid #ddd

  div
    margin-right 60px

  b
    font-size 16px
    font-weight 600

  p
    margin-top 10px
    font-size 14px
    line-height 1.45

  a
    color inherit
    text-decoration none

    &:hover
      color #05f