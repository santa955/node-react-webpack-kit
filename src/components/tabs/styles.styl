.tabs-wrapper
  display flex
  flex-direction column
  height 100vh
  background #fff

  .panes
    display flex
    flex 1

    .pane
      width 100%
      height 100%
      overflow-x hidden
      overflow-y auto
      flex-shrink 0

      &.inactive
        display none

      &.active
        display block

  .tabs
    position relative
    display flex
    z-index 1
    box-shadow 0 -1px 1px rgba(241, 241, 241, .6)

    .tab
      padding 10px 12px
      font-size 16px
      font-weight 400
      flex 1
      text-align center

      &.active
        color #00B51D